
@{
    ViewData["Title"] = "AddRepairToAvto";
    @model Kursachtry3.Models.ViewModel.AddRepairViewModel
}

<h2>AddRepairToAvto</h2>

<form asp-antiforgery="true" method="post">
    <div class="content jumbotron">
        <div class="row">
            <div class="col-lg-2">
                <div class="form-group row ">
                    <label for="inputbrandname" class="col-sm col-form-label">Type of repair</label><br />
                </div>
                <div class="form-group row ">
                    <label for="inputBody" class="col-sm col-form-label">Worker</label><br />
                </div>
                <div class="form-group row ">
                    <label for="inputExpenses" class="col-sm col-form-label">Date</label><br />
                </div>
            </div>
            <div class="col">
                <div class="form-group row input-group" style="width:auto;">
                    <input list="manufacturer-list" class="form-control" name="type">
                    <div class="input-group-append">
                        <a class="btn btn-outline-secondary" href="/AddSome/AddRepair/@Model.Avto_key">Add Repair</a>
                    </div>
                    <datalist id="manufacturer-list">
                        @{
                            foreach (var i in Model.type_Of_Repairs)
                            {
                                <option value="@i.name">@i.name</option>
                            }
                        }
                    </datalist>
                </div>
                <div class="form-group row ">
                    <input list="type-list" class="form-control" name="worker">

                    <datalist id="type-list">
                        @{
                            foreach (var i in Model.work_Datas)
                            {
                                <option value="@i.worker.fullname"></option>
                            }
                        }
                    </datalist>
                </div>
                <div class="form-group row ">
                    <input type="hidden" class="form-control" id="IdKey" asp-for="Avto_key">
                    <input type="date" class="form-control" id="inputExpenses" asp-for="date">
                </div>
                <input type="submit" class="btn btn-success" style="font-weight:700; float:right;" value="Add Repair" name="action" />
            </div>
        </div>
    </div>
</form>